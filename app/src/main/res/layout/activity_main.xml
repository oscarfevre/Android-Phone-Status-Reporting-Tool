<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editWebhook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Slack Incoming Webhook URL" />

    <EditText
        android:id="@+id/editApiEndpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="API endpoint for GPS JSON (e.g., https://example.com/location)" />

    <EditText
        android:id="@+id/editApiKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="API key (optional)"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Service" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Service" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: idle"
        android:paddingTop="12dp" />

</LinearLayout>
